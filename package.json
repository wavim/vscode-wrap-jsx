{
	"name": "wrap-jsx",
	"displayName": "Wrap JSX",
	"description": "Simple JSX Selection Wrapper",
	"version": "1.0.3",
	"publisher": "carbonsoda",
	"author": {
		"name": "David W."
	},
	"homepage": "https://github.com/CarbonicSoda/vscode-wrap-jsx",
	"repository": {
		"type": "git",
		"url": "https://github.com/CarbonicSoda/vscode-wrap-jsx"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/CarbonicSoda/vscode-wrap-jsx/issues",
		"email": "carbonsoda@outlook.com"
	},
	"engines": {
		"vscode": "^1.80.0"
	},
	"keywords": [
		"wrap",
		"tag",
		"component",
		"html",
		"jsx",
		"tsx"
	],
	"categories": [
		"Keymaps"
	],
	"icon": "media/icon.png",
	"main": "./dist/extension.js",
	"browser": "./dist/web/extension.js",
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"title": "Wrap",
				"category": "Wrap JSX",
				"command": "wrap-jsx.wrap",
				"enablement": "editorLangId == html || editorLangId == javascriptreact || editorLangId == typescriptreact || editorLangId == vue"
			}
		],
		"keybindings": [
			{
				"command": "wrap-jsx.wrap",
				"when": "editorLangId == html || editorLangId == javascriptreact || editorLangId == typescriptreact || editorLangId == vue",
				"key": "Ctrl+Alt+W"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "pnpm run check-types && pnpm run lint && node esbuild.js && node esbuild.web.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch && node esbuild.web.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "pnpm run check-types && pnpm run lint && node esbuild.js --production && node esbuild.web.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
	},
	"devDependencies": {
		"@types/node": "~20.17.11",
		"@types/vscode": "^1.80.0",
		"@typescript-eslint/eslint-plugin": "^8.19.0",
		"@typescript-eslint/parser": "^8.19.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"@vscode/test-web": "^0.0.65",
		"esbuild": "^0.25.1",
		"eslint": "^9.17.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.7.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@playwright/browser-chromium",
			"esbuild"
		]
	}
}
